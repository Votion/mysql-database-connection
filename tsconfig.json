{
  "compilerOptions": {
    "noImplicitAny": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "alwaysStrict": true,
    "strictNullChecks": true,
    "declaration": true,
    "noUnusedLocals": true,

    "module": "commonjs",
    "moduleResolution": "Node",

    "skipLibCheck": true,
    "target": "es6",

    "outDir": "./dist"
  },
  "exclude": [
    "node_modules",
    "typings/main.d.ts",
    "typings/main"
  ],
  "include": [
    "src/**/*"
  ],
  "files": [
    "typings/index.d.ts"
  ]
}